%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    = link_to "Paprika to Instacart", root_path, class: "navbar-brand"
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      - if user_signed_in?
        %ul.navbar-nav.mr-auto
          %li.nav-item
            %a.nav-link.disabled
              = current_user.email
          %li.nav-item
            = form_tag destroy_user_session_path do
              = submit_tag "Logout", class: "nav-link"
          %li.nav-item
            = link_to "Account settings", edit_user_registration_path, class: "nav-link"
          %li.nav-item
            = link_to "Instacart Cart", "https://www.instacart.com/", target: "_blank", class: "nav-link"
      - else
        %ul.navbar-nav.mr-auto
          %li.nav-item
            = link_to('Login', new_user_session_path, class: "nav-link")
